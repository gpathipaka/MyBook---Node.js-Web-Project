extends layout
block title
  title #{title}
block content
  form.form-horizontal(method='post')
    fieldset
      legend User Login Page
      .control-group
        label.control-label(for='username') User Name
        .controls
          input#username.input-xlarge(type='text', name='username')
      .control-group
        label.control-label(for='password') Password
        .controls
          input#password.input-xlarge(type='password', name='password')
      .form-actions
        button.btn.btn-primary(type='submit') Login